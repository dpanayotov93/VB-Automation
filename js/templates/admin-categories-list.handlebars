<h2>ALL CATEGORIES:</h2>
<div class="table-responsive">
    <table class="table dataTable table-responsive table-hover">
        <thead class="thead-inverse">
            <tr>
                <th> </th>
                {{#each this}}
                    {{#if @first}}
                        {{#each this}}
                            <th>{{@key}}</th>
                        {{/each}}
                    {{/if}}
                {{/each}}
                <th> </th>
            </tr>
        </thead>
        <tbody>
            {{#each this}}
                <tr>
                    <td><button data-toggle="modal" data-target="#edit-category-modal" onclick="adminController.editCategory('{{this.id}}')">Edit</button></td>
                    {{#each this}}
                        {{#unless subCategories}}
                            <td>{{this}}</td>
                        {{/unless}}
                    {{/each}}
                    <td><button onclick="adminController.deleteCategory('{{this.id}}')">x</button></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div id="edit-category-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
 <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title" id="myModalLabel">Edit Category:</h4>
      </div>
      <div id="edit-category-modal-body" class="modal-body">

      </div>
      <div class="modal-footer">
        <button onclick="adminController.sendEditedCategories()" type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
