<div style="text-align: center">
    <button onclick="$('#create-filter-wrap').show(); $('#show-filters-wrap').hide();">ADD NEW FILTER</button>
    <button id="admin-show-all-filters" onclick="$('#create-filter-wrap').hide(); $('#show-filters-wrap').show();">SHOW ALL FILTER</button>
</div>

<div class="row" id="create-filter-wrap"  style="display: none;">
   <h2>New Filter: </h2>
    <table class="table">
        {{#each input}}
            <tr>
                <td>{{@key}}:</td>
                <td><textarea id="{{this}}"></textarea></td>
            </tr>
        {{/each}}
        {{#each checkbox}}
            <tr>
                <td>{{@key}}:</td>
                <td><input id="{{this}}" type="checkbox"></td>
            </tr>
        {{/each}}
    </table>
    <button onclick="adminController.createFilter()">CREATE FILTER</button>
</div>

<div class="row" id="show-filters-wrap"  style="display: none;">

</div>
